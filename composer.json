{
    "name": "mjolnic/thorcms-starter",
    "description": "Starter Laravel 4 site featuring a blog, using ThorCMS as the backend",
    "keywords": ["framework", "laravel", "cms", "blog", "thorcms", "backend", "multilingual"],
    "license": "MIT",
    "require": {
        "php": ">=5.4.0",
        "laravel/framework": "4.1.*",
        "way/generators": "dev-master",
        "barryvdh/laravel-ide-helper": "1.*",
        "mjolnic/drumbs": "dev-master",
        "mjolnic/thorcms": "dev-master"
    },
    "autoload": {
        "classmap": [
            "app/models",
            "app/controllers",
            "app/commands",
            "app/database/migrations",
            "app/database/seeds",
            "app/tests/TestCase.php"
        ],
        "psr-0": {
            "": [
                "app/src"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan ide-helper:generate"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan ide-helper:generate"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate --env=local"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
