{
    "name": "thor/starter",
    "description": "Thor CMS Framework starter site. Laravel 4 CMS.",
    "keywords": ["framework", "laravel", "cms", "blog", "thor", "thorfw", "backend", "multilingual"],
    "license": "MIT",
    "authors": [
        {
            "name": "Javier Aguilar",
            "homepage": "http://www.mjolnic.com/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4",
        "laravel/framework": "4.1.*",
        "thor/framework": "dev-develop",
        "barryvdh/laravel-ide-helper": "1.*"
    },
    "autoload": {
        "classmap": [
            "app/database/migrations",
            "app/database/seeds",
            "app/tests/TestCase.php"
        ],
        "psr-0": {
            "": [
                "app/src"
            ]
        }
    },
    "scripts": {
        "pre-install-cmd": [
            "touch app/database/production.sqlite"
        ],
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan ide-helper:generate"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan ide-helper:generate"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
